{
  "categories": {
    "slide-layout": {
      "title": "SLIDE_LAYOUT",
      "type": "title",
      "subcategories": ["font-sizes", "display-options", "autoplay-options"]
    },
    "display-options": {
      "title": "DISPLAY_OPTIONS",
      "type": "switch",
      "settings": [
        "akhandpatt",
        "display-next-line",
        "left-align",
        "larivaar",
        "larivaar-assist",
        "larivaar-assist-type",
        "vishraam",
        "display-vishraams",
        "vishraam-type",
        "vishraam-source"
      ]
    },
    "font-sizes": {
      "title": "FONT_SIZES",
      "type": "range",
      "max": 20,
      "min": 1,
      "step": 1,
      "settings": ["gurbani", "translation", "transliteration", "teeka", "announcements"]
    },
    "visibility": {
      "title": "VISIBILITY",
      "type": "checkbox",
      "settings": ["translation", "transliteration", "teeka"]
    },
    "autoplay-options": {
      "title": "AUTOPLAY_OPTIONS",
      "type": "switch",
      "settings": ["autoplay-toggle", "autoplay-delay"]
    },
    "bani-and-languages": {
      "title": "BANI_AND_LANGUAGES",
      "type": "title",
      "subcategories": ["bani", "language"]
    },
    "bani": {
      "title": "BANI_SETTINGS",
      "type": "dropdown",
      "settings": ["bani-length", "mangal-position"]
    },
    "language": {
      "title": "LANGUAGE_SETTINGS",
      "type": "dropdown",
      "settings": ["translation-language", "teeka-language"]
    }
  },
  "settings": {
    "gurbani-font-size": {
      "title": "BANI",
      "default": 9
    },
    "translation-font-size": {
      "title": "TRANSLATION",
      "default": 5
    },
    "teeka-font-size": {
      "title": "TRANSLATION",
      "default": 4
    },
    "transliteration-font-size": {
      "title": "TRANSLITERATION",
      "default": 4
    },
    "announcements-font-size": {
      "title": "TRANSLITERATION",
      "default": 7
    },
    "translation-visibiliity": {
      "title": "TRANSLATION",
      "default": true
    },
    "teeka-visibiliity": {
      "title": "TRANSLATION",
      "default": true
    },
    "transliteration-visibiliity": {
      "title": "TRANSLITERATION",
      "default": true
    },
    "akhandpatt": {
      "title": "AKHAND_PATH_VIEW",
      "notes": "CHROMECAST_UNAVAILABLE",
      "default": false
    },
    "display-next-line": {
      "title": "NEXT_LINE",
      "default": false
    },
    "left-align": {
      "title": "LEFT_ALIGN",
      "default": false
    },
    "larivaar": {
      "title": "LARIVAAR",
      "default": false
    },
    "larivaar-assist": {
      "title": "LARIVAAR_ASSIST",
      "notes": "LARIVAAR_ASSIST_MSG",
      "default": false
    },
    "larivaar-assist-type": {
      "title": "ASSIST_TYPE",
      "type": "dropdown",
      "options": {
        "single-color": "SINGLE_COLOR",
        "multi-color": "MULTI_COLOR"
      },
      "default": "single-color"
    },
    "display-vishraams": {
      "title": "SHOW_VISHRAAMS",
      "default": false
    },
    "vishraam-type": {
      "title": "VISHRAAM_OPTIONS",
      "type": "dropdown",
      "default": "colored-words",
      "options": {
        "colored-words": "COLORED_WORDS",
        "gradient-bg": "GRADIENT_BG"
      }
    },
    "vishraam-source": {
      "title": "VISHRAAM_SOURCE",
      "options": {
        "sttm2": "STTM2",
        "igurbani": "I_GURBANI",
        "sttm": "STTM"
      },
      "default": "sttm-2"
    },
    "autoplay-toggle": {
      "title": "AUTO_PLAY",
      "default": false
    },
    "autoplay-delay": {
      "title": "DELAY",
      "type": "range",
      "max": 20,
      "min": 1,
      "step": 1,
      "default": 10
    },
    "bani-length": {
      "title": "BANI_LENGTH",
      "type": "dropdown",
      "options": {
        "short": "SHORT",
        "medium": "MEDIUM",
        "long": "LONG",
        "extralong": "EXTRA_LONG"
      },
      "default": "short"
    },
    "mangal-position": {
      "title": "MANGAL_POSITION",
      "type": "dropdown",
      "options": {
        "current": "CURRENT",
        "above": "ABOVE"
      },
      "default": "current"
    },
    "translation-language": {
      "title": "TRANSLATION_LANGUAGE",
      "type": "dropdown",
      "options": {
        "English": "ENGLISH",
        "Spanish": "SPANISH"
      },
      "default": "English"
    },
    "transliteration-language": {
      "title": "TRANSLITERATION_LANGUAGE",
      "type": "dropdown",
      "options": {
        "English": "ENGLISH",
        "Devanagri": "DEVANAGARI"
      },
      "default": "English"
    }
  }
}
